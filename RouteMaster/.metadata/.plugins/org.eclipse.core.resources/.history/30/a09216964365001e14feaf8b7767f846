package com.user;

import jakarta.servlet.RequestDispatcher;
import jakarta.servlet.ServletException;
import jakarta.servlet.annotation.WebServlet;
import jakarta.servlet.http.HttpServlet;
import jakarta.servlet.http.HttpServletRequest;
import jakarta.servlet.http.HttpServletResponse;
import java.io.IOException;
import java.util.List;

public class LoginnewServlet extends HttpServlet {
	private static final long serialVersionUID = 1L;

	protected void doGet(HttpServletRequest request, HttpServletResponse response) throws ServletException, IOException {
		
		response.getWriter().append("Served at: ").append(request.getContextPath());
		
		
		String Username=request.getParameter("usename");//form input name
		String Passowrd=request.getParameter("password");//form input password
		
		
		
		try {
			List<RegisterUser> regDetails=RegisteruserDButy.validate(Username, Passowrd);//above string code 
			request.setAttribute("regDetails", regDetails);
		}catch (Exception e) {
			e.printStackTrace();
		}
		
		String profile=request.getParameter("profile");
		
		RequestDispatcher dis = (RequestDispatcher) request.getRequestDispatcher("Profile.jsp");
		dis.forward(request,response);
	}

}
