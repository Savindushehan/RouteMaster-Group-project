package com.user;

import jakarta.servlet.RequestDispatcher;
import jakarta.servlet.ServletException;
import jakarta.servlet.http.HttpServlet;
import jakarta.servlet.http.HttpServletRequest;
import jakarta.servlet.http.HttpServletResponse;
import java.io.IOException;
import java.util.List;


public class loginNewSevlet extends HttpServlet {
	private static final long serialVersionUID = 1L;

	protected void doGet(HttpServletRequest request, HttpServletResponse response) throws ServletException, IOException {
		
		String Username=request.getParameter("usename");//form input name
		String Passowrd=request.getParameter("password");//form input password
		
		
		
		try {
            List<RegisterUser> regDetail = RegisteruserDButy.validate(Username, Passowrd); // corrected method name
            request.setAttribute("regDetail", regDetail);
        } catch (Exception e) {
            e.printStackTrace();
        }

        String profile = request.getParameter("profile");

        if ("profile".equals(profile)) { // corrected the comparison
            RequestDispatcher dis = request.getRequestDispatcher("Profile.jsp");
            dis.forward(request, response);
        }

		
		response.getWriter().append("Served at: ").append(request.getContextPath());
	}

}
